<meta charset="utf-8">

<body>
 <div id="wrapper">
  <h1>Reporte de Registros</h1>
  
  <table id="keywords" cellspacing="0" cellpadding="0">
            <thead>
          <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Temperatura Ingreso</th>
            <th>Temperatura Salida</th>
            <th>Persona que registro</th>
            <th class="fecha">Fecha</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>

            <tr>
              <td><%= record.id %></td>
              <td><%= record.person.name %></td>
              <td class="entrada"><%= record.entrance_temperature %></td>
              <td><%= record.departure_temperature %></td>
              <td><%= record.person.email %></td>
              <td><%= record.created_at.strftime("%d-%m-%Y %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
  </table>
 </div> 
</body>

