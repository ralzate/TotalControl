
<%= simple_form_for(@registry) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :entrance_temperature %>
    <%= f.input :departure_temperature %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
