
<%= simple_form_for [@user,@registry], :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :entrance_temperature %>
    <%= f.input :departure_temperature %>
    <%= f.association :user, input_html: { hidden: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>

  </div>
<% end %>
