<p id="notice"><%= notice %></p>

<h1>Registries</h1>

<table>
  <thead>
    <tr>
      <th>Entrance temperature</th>
      <th>Departure temperature</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registries.each do |registry| %>
      <tr>
        <td><%= registry.entrance_temperature %></td>
        <td><%= registry.departure_temperature %></td>
        <td><%= registry.user_id %></td>
        <td><%= link_to 'Show', user_registry_path(@user,registry) %></td>
        <td><%= link_to 'Edit', edit_user_registry_path(@user,registry) %></td>
        <td><%= link_to 'Destroy', user_registry_path(@user,registry), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Registry', new_user_registry_path(@user) %>
