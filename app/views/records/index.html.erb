



<p id="notice"><%= notice %></p>

<div class="card">
  <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Registro del la persona</h3>
  <div class="card-body">
    <div id="table" class="table-editable">
      <span class="table-add float-right mb-3 mr-2"><a href="#!" class="text-success"><i
            class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
            <%= render 'search', record: @record %>

      <table class="table table-bordered table-responsive-md table-striped text-center">
        <thead>
          <tr>
            <th>Temperatura Ingreso</th>
            <th>Temperatura Salida</th>
            <th>Persona que registro</th>
            <th>Fecha</th>
            <th  colspan="3">Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |record| %>
            <tr>
              <td><%= record.entrance_temperature %></td>
              <td><%= record.departure_temperature %></td>
              <td><%= record.person.email %></td>
              <td><%= record.created_at.strftime("%d-%m-%Y %H:%M") %></td>
              <td><%= link_to 'Mostrar',  person_record_path(@person,record), :class => "btn btn-info" %></td>
              <td><%= link_to 'Editar',  edit_person_record_path(@person,record), :class => "btn btn-success" %></td>
              <td><%= link_to 'Eliminar', person_record_path(@person,record), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to 'Nuevo Registro', new_person_record_path(@person) %>
<%= link_to 'Atras', people_path %>
