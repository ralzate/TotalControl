

<div class="card">
  <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Personas</h3>
  <div class="card-body">
    <div id="table" class="table-editable">
      <span class="table-add float-right mb-3 mr-2"><a href="#!" class="text-success"><i
            class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
            <%= render 'search', person: @person %>

      <table class="table table-bordered table-responsive-md table-striped text-center">
        <thead>
          <tr>
            <th>Id</th>
            <th>Registros</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Telefono</th>
            <th>Email</th>
            <th>Direccion</th>
            <th>Identificacion</th>
            <th>Empresa</th>
            <th>Usuario</th>
            <th  colspan="3">Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% @people.each do |person| %>

          <tr>
            <td><%= link_to  'Registros(' + person.records.count.to_s + ')', person_records_path(person) %></td>
            <td><%= person.id %></td>
            <td><%= person.name %></td>
            <td><%= person.lastname %></td>
            <td><%= person.phone %></td>
            <td><%= person.email %></td>
            <td><%= person.address %></td>
            <td><%= person.identification %></td>
            <td><%= person.company %></td>
            <td><%= person.user.email %></td>
            <td><%= link_to 'Mostrar', person, :class => "btn btn-info btn-sm" %></td>
            <td><%= link_to 'Editar', edit_person_path(person), :class => "btn btn-success btn-sm" %></td>
          </tr>
          <% end %>

        </tbody>
      </table>
    <div class="btn-group demoPadder" role="group" aria-label="Basic example">
      <%= link_to 'Nueva persona', new_person_path(@person), :class => "btn btn-primary" %>
      <%= link_to 'Atras', root_path, :class => "btn btn-secondary" %>
    </div>
    </div>
  </div>
  <div class="paginacion">
    <%= will_paginate @people, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>



