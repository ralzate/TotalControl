
<%= simple_form_for(@person) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :lastname %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :address %>
    <%= f.input :identification %>
    <%= f.input :company %>
    <%= f.association :user, selected: current_user, input_html: { hidden: true }  %>
  </div>
  <%= f.fields_for :records do |record| %>
    <%= record.text_field :entrance_temperature %>
    <%= record.text_field :departure_temperature %>
  <% end %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
