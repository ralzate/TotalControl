
<div class="container my-4">
   <div class="row">
      <div class="col-lg-12 col-md-12 mb-12">
         <div class="card card-cascade wider">
            <div class="card-body card-body-cascade text-center">
               <div class="alert alert-primary" role="alert">
                  <br/>
                  <h2 class="card-title"><strong>Informaci√≥n de la persona <%= icon('fa', 'user-friends') %> </strong></h2>
                  <br/>
               </div>
               <div class="container">
               <div class="row">
                  <div class="col-sm">
                  <div class="alert alert-secondary" role="alert">
                     <h5><b>Id:</b></h5>
                     <%= @person.id %>
                  </div>        
                  </div>
                  <div class="col-sm">
                  <div class="alert alert-secondary" role="alert">
                     <h5><b>Nombre:</b></h5>
                     <%= @person.name %>
                  </div>        
                  </div>
                  <div class="col-sm">
                  <div class="alert alert-secondary" role="alert">
                     <h5><b>Apellido:</b></h5>
                     <%= @person.lastname %>
                  </div>        
                  </div>
               </div>
               <div class="row">
                  <div class="col-sm">
                    <div class="alert alert-secondary" role="alert">
                      <h5><b>Telefono:</b></h5>
                      <%= @person.phone %>
                    </div>        
                    </div>
                    <div class="col-sm">
                    <div class="alert alert-secondary" role="alert">
                      <h5><b>Email:</b></h5>
                      <%= @person.email %>
                    </div>        
                    </div>
                    <div class="col-sm">
                    <div class="alert alert-secondary" role="alert">
                      <h5><b>Direccion:</b></h5>
                      <%= @person.address %>
                    </div>        
                  </div>
               </div>

               <div class="row">
                  <div class="col-sm">
                    <div class="alert alert-secondary" role="alert">
                      <h5><b>Identificacion:</b></h5>
                      <%= @person.identification %>
                    </div>        
                    </div>
                    <div class="col-sm">
                    <div class="alert alert-secondary" role="alert">
                      <h5><b>Empresa:</b></h5>
                      <%= @person.company %>
                    </div>        
                    </div>
                    <div class="col-sm">
                    <div class="alert alert-secondary" role="alert">
                      <h5><b>Usuario que lo registro:</b></h5>
                      <%= @person.user.email %>
                    </div>        
                  </div>
               </div>
              
               <%= link_to 'Editar', edit_person_path(@person), class: "btn btn-success" %> 
               <%= link_to 'Atras', people_path, class: "btn btn-info" %>
               <!-- Button trigger modal -->
               <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
               Reporte
               </button>
               </div>    
            </div>
         </div>
      </div>
   </div>
</div>




<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Numero de registros de <%= @person.email %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <%= pie_chart @person.records.group(:person_id).count %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>