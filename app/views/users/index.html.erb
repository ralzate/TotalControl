
<div class="card">
  <h3 class="card-header text-center font-weight-bold text-uppercase py-4">Usuarios de la aplicacion</h3>
  <div class="card-body">
    <div id="table" class="table-editable">
      <span class="table-add float-right mb-3 mr-2"><a href="#!" class="text-success"><i
            class="fas fa-plus fa-2x" aria-hidden="true"></i></a></span>
            <%= render 'search', user: @user %>

      <table class="table table-bordered table-responsive-md table-striped text-center">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
            <th  colspan="3">Opciones</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.user_role %></td>
            <td><%= link_to 'Mostrar', user, :class => "btn btn-info btn-sm" %></td>
            <td><%= link_to 'Editar', edit_user_path(user), :class => "btn btn-success btn-sm"  %></td>
            <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="paginacion">
    <%= will_paginate @users, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>

<p>
  Download:
  <%= link_to "CSV", users_path(format: "csv") %> |
  <%= link_to "Excel", users_path(format: "xls") %>
</p>