<div class="container my-4">
	<div class="row">
		<div class="col-lg-12 col-md-12 mb-12">
			<div class="card card-cascade wider">
				<div class="card-body card-body-cascade text-center">

					<div class="alert alert-primary" role="alert">
						<br/>
						<h2 class="card-title"><strong>Informaci√≥n del usuario <%= icon('fa', 'user-check') %> </strong></h2>
						<br/>
					</div>

					<div class="container">
						<div class="row">
							<div class="col-sm">
								<div class="alert alert-secondary" role="alert">
										<h5><b>Id:</b></h5>
										<%= @user.id %>
								</div>        
							</div>
							<div class="col-sm">
								<div class="alert alert-secondary" role="alert">
									<h5><b>Nombre:</b></h5>
									<%= @user.name %>
								</div>        
							</div>
							<div class="col-sm">
								<div class="alert alert-secondary" role="alert">
									<h5><b>Email:</b></h5>
									<%= @user.email %>
								</div>        
							</div>
						</div>

						<div class="row">
							<div class="col-sm">
								<div class="alert alert-secondary" role="alert">
									<h5><b>Rol:</b></h5>
									<%= @user.user_role %>
								</div>        
							</div>
							<div class="col-sm">
								<div class="alert alert-secondary" role="alert">
									<h5><b>Creado:</b></h5>
									<%= @user.created_at.strftime("%d-%m-%Y %H:%M") %>
								</div>        
							</div>
							<div class="col-sm">
								<div class="alert alert-secondary" role="alert">
									<h5><b>Actualizado:</b></h5>
									<%= @user.updated_at.strftime("%d-%m-%Y %H:%M") %>
								</div>        
							</div>
						</div>
						
					<%= link_to 'Editar', edit_user_path(@user), class: "btn btn-success" %> 
					<%= link_to 'Atras', users_path, class: "btn btn-info" %>
					<!-- Button trigger modal -->
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
					Reporte
					</button>
				</div>    
			</div>
		</div>
	</div>
</div>

<!-- Modal numero de personas registradas por el usuario  -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Personas registradas por <%= @user.email %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
         <%= pie_chart @user.people.group(:user_id).count %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>